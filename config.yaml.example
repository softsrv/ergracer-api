# ErgrAcer API Configuration
# Copy this file to config.yaml and update with your values

# Database Configuration
database:
  url: "postgres://ergracer:password123@localhost:5432/ergracer?sslmode=disable"

# JWT Configuration
jwt:
  secret: "your-super-secret-jwt-key-change-in-production"

# Mailgun Configuration (for email verification)
mailgun:
  domain: "yourdomain.mailgun.org"
  api_key: "your-mailgun-api-key"
  from_email: "noreply@yourdomain.com"
  from_name: "ErgRacer Team"

# Application Configuration
app:
  url: "http://localhost:8080"
  port: 8080
